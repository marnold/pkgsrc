#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1.1.1 2000/07/27 16:10:23 jlam Exp $

PKGNAME=$1
STAGE=$2

case ${STAGE} in
DEINSTALL)
	;;
POST-DEINSTALL)
	cat << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to remove the
following directories and files:

	/etc/pksd.conf
	/var/pks
===========================================================================
EOF
	;;
*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
