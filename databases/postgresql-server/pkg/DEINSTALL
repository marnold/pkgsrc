#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1.1.1 2001/05/14 14:50:25 jlam Exp $
#

PKGNAME=$1
STAGE=$2

USER="@PGUSER@"
GROUP="@PGGROUP@"
PGHOME="@PGHOME@"

CAT="@CAT@"
RM="@RM@"

case ${STAGE} in
DEINSTALL)
	;;

POST-DEINSTALL)
	${CAT} << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want
to remove:

  * the \`${USER}' user

  * the \`${GROUP}' group

  * the following directories:

	${PGHOME}
===========================================================================
EOF
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
