-		$(INSTALL_PROGRAM) $$x $(DESTDIR)$(bindir)/$$f; \
+		$(INSTALL_LKM) $$x $(DESTDIR)$(lkmdir)/$$f; \
 	done
 	for i in lkm subsys modules; do \
 		if test -d /$$i; then \
@@ -126,7 +128,7 @@
