+			bp = buf;
+
+			/* copy gecos, interpolating & to be full name */
+			for (p = gecos; *p != '\0'; p++) {
+				if (bp >= &buf[BUFLEN - 1])
+					/* buffer overflow */
+					goto gecos_done;
+				if (*p == '&') {
+					/* interpolate full name */
+					snprintf(bp, BUFLEN - (bp - buf),
+						 "%s", pwd->pw_name);
+					*bp = toupper(*bp);
+					bp += strlen(bp);
+				}
+				else
+					*bp++ = *p;
+			}
+			*bp = '\0';
+			if ((pent->pw_name = strdup(buf)) == NULL)
+				goto err;
