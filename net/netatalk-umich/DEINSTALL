#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1.1.1.2.2 2002/06/23 18:56:07 jlam Exp $

PKGNAME=$1
STAGE=$2

case ${STAGE} in
DEINSTALL)
	;;
POST-DEINSTALL)
	ETCDIR=/etc/netatalk

	cat << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to
remove the netatalk configuration file directory:

	${ETCDIR}
===========================================================================
EOF
	;;
*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
