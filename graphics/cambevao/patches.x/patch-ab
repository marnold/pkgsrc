+#!/bin/sh
+#
+# $ NetBSD $
+#
+# PROVIDE: @PROGRAM@
+# REQUIRE: DAEMON
+
+if [ -f /etc/rc.subr ]
+then
+	. /etc/rc.subr
+fi
+
+name="@PROGRAM@"
+rcvar=$name
+command="@PREFIX@/bin/${name}"
+
+load_rc_config $name
+run_rc_command "$1"
