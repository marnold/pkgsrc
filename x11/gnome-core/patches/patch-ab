 #include <net/if.h>
-#ifdef __FreeBSD__
-#include <net/if_ppp.h>
-#endif /* __FreeBSD__ */
 #include <net/ppp_defs.h>
+#if (defined(BSD) && BSD >= 199506)
+#include <net/if_ppp.h>
+#endif /* 4.4 BSD derived */
 
