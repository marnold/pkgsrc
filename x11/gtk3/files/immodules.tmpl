#
# Rebuild the GTK3 immodules database.
#

GTK_IMMODULES_DB="@GTK_IMMODULES_DB@"
GTK_QUERY_IMMODULES="@GTK_QUERY_IMMODULES@"

case ${STAGE} in
POST-INSTALL)
	${GTK_QUERY_IMMODULES} > ${GTK_IMMODULES_DB}
	;;
DEINSTALL)
	[ "${PKGBASE}" = "gtk3+" ] && ${RM} -f ${GTK_IMMODULES_DB}
	;;
POST-DEINSTALL)
	[ "${PKGBASE}" != "gtk3+" ] && \
		${GTK_QUERY_IMMODULES} > ${GTK_IMMODULES_DB}
	;;
*)
	;;
esac
