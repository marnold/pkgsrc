# $NetBSD: INSTALL,v 1.1.1.1 2004/01/20 13:33:06 xtraeme Exp $

if [ "$2" = POST-INSTALL ]
then
	cd @GDMCFGDIR@
	for SOURCE in @GDMCFGFILES@
	do
		TARGET=${SOURCE%.default*}${SOURCE##*.default}
		if [ ! -f $TARGET ]
		then
			@MKDIR@ `dirname $TARGET`
			@CP@ -p $SOURCE $TARGET
		fi
	done
	@LN@ -fs Gnome Sessions/Default
fi
