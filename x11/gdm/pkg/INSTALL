#!/bin/sh
#
# $NetBSD: INSTALL,v 1.1.1.1 1999/11/10 23:15:28 tron Exp $

if [ "$2" = POST-INSTALL ]
then
	cd @@GDMCFGDIR@@
	for SOURCE in @@GDMCFGFILES@@
	do
		TARGET=${SOURCE%.default*}${SOURCE##*.default}
		if [ ! -f $TARGET ]
		then
			@@MKDIR@@ `dirname $TARGET`
			@@CP@@ -p $SOURCE $TARGET
		fi
	done
	@@LN@@ -fs Gnome Sessions/Default
fi

exit 0
