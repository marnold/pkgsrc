# $NetBSD: DEINSTALL,v 1.1.1.1.4.1 2011/02/27 00:26:23 tron Exp $

PREFIX="@PREFIX@"
RUBY_GEM_BASE="${PREFIX}/@RUBY_GEM_BASE@"
RUBY_SITERIDIR="${PREFIX}/@RUBY_SITERIDIR@"

case ${STAGE} in
DEINSTALL)
	${RM} -f ${RUBY_SITERIDIR}/created.rid
	;;
POST-DEINSTALL)
	${RM} -rf ${RUBY_GEM_BASE}
	;;
esac
exit
