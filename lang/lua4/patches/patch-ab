+LIB= lua4
+
+SHLIB_MAJOR= 0
+SHLIB_MINOR= 0
+
+LIBDIR= ${PREFIX}/lib
+INCDIR= ${PREFIX}/include
+
+CPPFLAGS+= -I${.CURDIR}/../../include
+
+LDADD+= -lm
+
+NOLINT= 1
+
+.PATH:	${.CURDIR}/../../src
+
+INCLUDES= lua.h luadebug.h lauxlib.h
+
+SRCS= lapi.c lcode.c ldebug.c ldo.c lfunc.c lgc.c llex.c lmem.c	\
+      lobject.c lparser.c lstate.c lstring.c ltable.c ltests.c	\
+      ltm.c lundump.c lvm.c lzio.c
+
+afterinstall:
+	for i in ${INCLUDES}; do					\
+		${BSD_INSTALL_DATA} ${.CURDIR}/../../include/$$i	\
+		${INCDIR}/`basename $$i .h`4.h;				\
+	done
+
+.include <bsd.lib.mk>
