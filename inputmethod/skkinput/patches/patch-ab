+#ifdef SKK_CONF
+char *
+strsave(const char *str)
+{
+  char *p;
+
+  if ((p = malloc(strlen(str) + 1)) == NULL) {
+    fprintf(stderr, "Fatal: Memory Exhausted.\n");
+    exit(1);
+  }
+  strcpy(p, str);
+  return p;
+}
+#endif
+
