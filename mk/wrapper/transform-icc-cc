case $arg in
######################################################################
# ignore flags that icc doesn't understand.
######################################################################
-ffast-math|-fomit-frame-pointer|-pedantic|-pipe|-s|-MP|-OPT:*)
	arg=
	msg_log $wrapperlog "   (transform-icc-cc) to: $arg"
	addtocache=yes
	;;
-finline-functions)
	arg=-Ob2
	msg_log $wrapperlog "   (transform-icc-cc) to: $arg"
	addtocache=yes
	;;
-funroll-all-loops|-funroll-loops)
	arg=-unroll
	msg_log $wrapperlog "   (transform-icc-cc) to: $arg"
	addtocache=yes
	;;
-O[4-9]|-O[12][0-9])
	arg=-O3
	msg_log $wrapperlog "   (transform-icc-cc) to: $arg"
	addtocache=yes
	;;
-Wall|-Wl,*)
	;;
-W*)
	arg=
	msg_log $wrapperlog "   (transform-icc-cc) to: $arg"
	addtocache=yes
	;;
esac
