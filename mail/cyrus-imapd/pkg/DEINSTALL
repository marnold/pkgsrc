#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1.1.1 2000/08/25 12:35:40 veego Exp $
#

PKGNAME=$1
STAGE=$2

USER=@CYUSER@
GROUP=@CYUSER@

case ${STAGE} in
DEINSTALL)
	;;
POST-DEINSTALL)
	cat << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to
remove the \`${USER}' user and in some cases also the \`${GROUP}' group.
===========================================================================
EOF
	;;
*)
	echo "Unexpected argument: $2"
	exit 1
	;;
esac
exit 0
