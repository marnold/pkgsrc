BUILD_USES_MSGFMT=	YES
GNU_CONFIGURE=		YES
USE_X11=		YES
USE_GMAKE=		YES
USE_LIBTOOL=		YES

CONFIGURE_ARGS+=        --localstatedir=${LOCALSTATEDIR}
LOCALSTATEDIR=          /var/gnome

.include "../../devel/gettext-lib/buildlink.mk"
.include "../../sysutils/gnome-vfs/buildlink.mk"
.include "../../textproc/libxml/buildlink.mk"
